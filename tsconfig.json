{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "paths": {
      "@types": ["./src/types"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
