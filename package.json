{
  "name": "tomherni",
  "version": "1.0.0",
  "description": "Personal website of Tom Herni.",
  "author": "Tom Herni",
  "private": true,
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "start": "wds --root-dir src --app-index index.html --watch --open",
    "test": "wtr \"test/**/*.test.js\" --node-resolve --coverage",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && wds --root-dir dist --app-index index.html --open",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
    "lint:stylelint": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier \"**/*.{css,html,js,json,md}\" --write --ignore-path .gitignore",
    "fix": "npm run lint && npm run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-terser": "^0.4.4",
    "@web/dev-server": "^0.3.0",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^2.60.0",
    "rollup-plugin-copy": "^3.5.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "lint-staged": {
    "src/**/*.css": "stylelint --fix",
    "**/*.js": "eslint --fix",
    "**/*.{css,html,js,json,md}": "prettier --write"
  }
}
